<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="SupervisorConsoleAppender" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
		<!-- %d{ABSOLUTE} %-5p %-40.40c:%3L - %m %n -->
			<param name="ConversionPattern" value="%d %-5p (%c{1}.java:%L) - %m %n" />
		</layout>
	</appender>
	
	<appender name="SupervisorRoFiAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="datePattern" value="'.'yyyy-MM-dd" />
		<param name="file" value="${catalina.home}/logs/OwsSupervisor.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ISO8601} %-5p [%t] %c: %m%n" />
		</layout>
	</appender>

	<logger name="org.apache.commons">
		<level value="ERROR" />
	</logger>

	<logger name="httpclient.wire">
		<level value="ERROR" />
	</logger>
	
	<root>
		<priority value="DEBUG" />
		<appender-ref ref="SupervisorConsoleAppender" />
	</root>

</log4j:configuration>
